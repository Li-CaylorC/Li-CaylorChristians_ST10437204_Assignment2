<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/istockphoto_1294440250_612x612"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Pupname"
        android:layout_width="330dp"
        android:layout_height="172dp"
        android:backgroundTint="#B19A7F"
        android:fontFamily="@font/black_ops_one"
        android:text="Welcome to Fluffy's  Tamagotchi App"
        android:textAlignment="center"
        android:textColor="#B19A7F"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="135dp"
        android:layout_height="61dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#B19A7F"
        android:text="Get Started "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pupname"
        app:srcCompat="@drawable/capture111" />
</androidx.constraintlayout.widget.ConstraintLayout>